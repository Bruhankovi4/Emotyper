<UserControl x:Class="TechNewLogic.GraphIT.Hv.Horizontal.HSectionLabel"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
		d:DesignHeight="300" d:DesignWidth="300" x:Name="root" Width="300" VerticalAlignment="Top"
		HorizontalAlignment="Left" x:ClassModifier="internal">

	<!-- Die Width des gesamten UserControls ist wichtig für's Zentrieren -->

	<StackPanel DataContext="{Binding ElementName=root}" HorizontalAlignment="Center">
		<Rectangle Width="2" Height="5" HorizontalAlignment="Center"
				Fill="{DynamicResource GeneralForeground}" />
		<TextBlock Text="{Binding Text}" Foreground="{DynamicResource GeneralForeground}"
				HorizontalAlignment="Center" Margin="0,2,0,0" />
	</StackPanel>

</UserControl>
