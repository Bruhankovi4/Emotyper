<Window x:Class="SOM_Visualization.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="720" Width="1280">
    <Grid Margin="0,0,2,0" Background="#FFEC1A1A">
        <Grid x:Name="gridControl" Background="#FFC8F1C2"/>
        <Button Content="Save Map" HorizontalAlignment="Right" VerticalAlignment="Top" Width="100" Height="25" RenderTransformOrigin="4.25,3.24" Click="SavevMap_Click"/>
        <Button Content="Save Coordinates" HorizontalAlignment="Right" VerticalAlignment="Top" Width="100" Height="25" RenderTransformOrigin="4.25,3.24" Click="SaveCoords_Click" Margin="0,30,0,0"/>
    </Grid>
</Window>
